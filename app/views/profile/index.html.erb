<div class="container "> 
  <div class="row row-cols-2">
    <div class="col">
      <img src="" class="card-img-top">
        <div class='imgsml'>
          <%=image_tag( current_user.profile_image,size: '100x100',class:"img-circular")if current_user.profile_image.attached? %>
        </div>
        <b>Username - </b><%=current_user.name%><br>
        <b> Email - </b><%=current_user.email%><br>
        <b> Bio - </b><%=current_user.bio%><br>
    </div>
     
    <div class = "col"> 
        <table class="table">
          <thead>
          <tr>
            <th>
              <p>
                Post
              <p>
            </th>
            <th>
              <%= button_to "followers" ,friend_index_path, method: :get , class:' btn btn-lg ' %>
            </th>
            <th>
              <%= button_to "following" ,following_path, method: :get ,class:'btn btn-lg'%>
            </th>
          </tr>
          </thead>
          <tbody> 
            <tr>
              <td> <%= @posts.count %> </td>
              <td> <%=  current_user.followers.count %> </td>
              <td> <%= current_user.following.count  %> </td>
            </tr>
          </tbody>
        </table>   
      </div> 
    </div>    
                          
         
    </div>
  </div>
</div>
</div>
</div>
</div><br>
<%= render template: 'posts/index'%>
