<div class="container text-center">
    <div class="row row-cols-3">
    <%@posts.each do |post|%>
    <div class="col gap-3">

      <%if post.post_image.attached? %>

        <%= image_tag(post.post_image , :size => "300x300") %>
        <p><%= post.content %>
        <div class="row row-cols-2">
          <div class= "col d flex">
            <div class="b">
            <%= button_to " ", post_likes_path(post), class:"bi bi-balloon-heart-fill", style:"color: black" ,remote: true%>
            <p><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%>
            </div>
            <div class= "a">
            <%= button_to " ", post_comments_path(post) ,class:"bi bi-chat", method: :get%></p> 
            </div>
          </div>
          <div class = 'col'>
            <%= render 'comments/form', post: post %>
            <%= render partial: "comments/comment", locals: { comments: post.comments } %>
          </div>
        </div>  
        <p class = "text-muted"><%= post.created_at %> ago </p>
        
        <br>
      <%end%>
   
     <br>

    </div>
    <% end %>
</div>

 